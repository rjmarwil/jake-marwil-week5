<div class="page-header">
  <h1><%= @location.name %>
  <div class='pull-right'>
    <%= link_to 'Edit Location', edit_location_path(@location), class:'btn btn-info' %>
  </div>
  </h1>
</div>

<ol class="breadcrumb">
  <li><a href="/locations">Locations</a></li>
  <li class="active"><%= @location.name %></li>
</ol>

<div>
  <h3>
    Name: <%= @location.name %>
  </h3>
</div>

<div>
  <h3>
    Address: <%= @location.address %>
  </h3>
</div>

<div>
  <h3>
    Zip Code: <%= @location.zipcode %>
  </h3>
</div>

<hr/>

<div>
  <h2>Events</h2>
</div>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Description</th>
      <th>Date</th>
      <th>Requires ID?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @location.events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event %></td>
        <td><%= event.date %></td>
        <td><%= event.requires_id %></td>
        <td>
          <div class='text-right'>
            <%= link_to 'Edit', edit_event_path(event), class:'btn btn-info' %>
            <%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
