<div class="page-header">
  <h1>Locations
  <div class='pull-right'>
    <%= link_to 'New Location', new_location_path, class:'btn btn-info' %>
  </div>
  </h1>
</div>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Zip Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.name, location %></td>
        <td><%= location.address %></td>
        <td><%= location.zipcode %></td>
        <td>
          <div class='text-right'>
            <%= link_to 'Edit', edit_location_path(location), class:'btn btn-info' %>
            <%= link_to 'Delete', location, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
