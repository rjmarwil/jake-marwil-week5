<%= form_for([@location, @event]) do |f| %>

  <div class="form-group row">
    <%= f.label :description, :class => "control-label col-md-2" %>
    <div class="form-controls col-md-4">
      <%= f.text_field :description, :class => 'form-control', :id => "description" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :date, :class => "control-label col-md-2" %>
    <div class="form-controls col-md-4">
      <%= f.date_select :date, :class => 'form-control', :id => "date" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :requires_id, 'Requires ID', :class => "control-label col-md-2" %>
    <div class="form-controls col-md-4">
      <%= f.check_box :requires_id, :class => 'form-control', :id => 'requires_id' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-offset-2 col-md-4">
      <%= f.submit :class => "btn btn-primary" %>
      <a class='btn btn-default' href="/locations">Cancel</a>
    </div>
  </div>

<% end %>
